# Required: your Groq API key (free at console.groq.com)
GROQ_API_KEY=gsk_...

# Optional: static API key to protect endpoints (leave blank to disable)
API_KEY=

# Optional: custom path for the SQLite database file
DB_PATH=focus_assistant.db

# Optional: directory for ChromaDB persistent vector storage
CHROMA_DIR=./chroma_db

# Optional: override the LLM model name
MODEL_NAME=llama-3.1-8b-instant

# Optional: max tokens for LLM responses
MAX_TOKENS=512
